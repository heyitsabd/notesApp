<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    
</head>
<body>
  <% if (locals.user) { %>
    <% notes.forEach(note => { %>
      <div class="card" style="width: 18rem;">
        <div class="card-body d-flex justify-content-between"> 
            <div>
              <form action="/notes/delete/<%= note.id %>" method="get">
                <h5 class="card-title"><%= note.heading %></h5>
                <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                <button type="submit" class="btn btn-primary btn-sm">Delete</button>
                
            </form>
            <a href="/notes/update/<%= note.id %>" class="btn btn-primary btn-sm">Update</a>
            
            </div>

            
            
        </div>
        
        
    </div>
    
    <form action="/notes/share/<%= note.id %>" method="post">
      <label for="email" >Enter Email:</label>
      <input type="email" id="email" name="email">
      <button type="submit">Share</button>
    </form>
    
    <% }) %>

    <% sharednotes.forEach(sharednote => { %>
      <div class="card" style="width: 18rem;">
        <div class="card-body d-flex justify-content-between"> 
            <div>
      <h5 class="card-title"><%= sharednote.heading %></h5>
      <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
      </div>
      </div>
      </div>
    <% }) %>
  <% } %>
   

  
</body>
</html>